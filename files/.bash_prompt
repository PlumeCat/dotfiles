#!/usr/bin/env bash
# bash_custom_prompt

function ps1() {
    local status="$?"
    local re='\e[0m\]'
    local rd='\e[1;31m\]'
    local RED='\033[0;31m'
    local gr='\[\e[1;32m\]'
    local ye='\[\e[1;33m\]'
    local bl='\[\e[1;34m\]'
    local lb='\[\e[1;36m\]'
        
    local smiley=""; if [[ $status == '0' ]]; then smiley+="$gr:)"; else smiley+="${rd}:("; fi
    local branch=" ${lb}$(git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1) /')"
    PS1="${gr}\u@${bl}\h:${ye}\w$branch$smiley ${re}\$ "
}

PROMPT_COMMAND=ps1

